<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<% if current_user.subscribed? %>

<p>
  <strong>Secret:</strong>
  <%= @product.secret %>
</p>
  <% if current_user.expires_at? %>
  <%= link_to "Subscribe", new_subscription_path(plan: 'monthly'), class: 'btn btn-primary' %>
  <p>Your account is canceled. Resubscribe</p>

  <% else %>
<p>
<%= link_to "Cancel Subscription", subscription_path, method: :delete %>
</p>
<% end %>
<% else %>

<%= link_to "Subscribe", new_subscription_path(plan: 'monthly'), class: 'btn btn-primary' %>
<%= link_to "Subscribe anually", new_subscription_path(plan: 'anually'), class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
