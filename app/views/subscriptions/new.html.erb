<h1>Subscripe</h1>

  <%= form_tag subscription_path, id: 'payment-form' do %>
  <span class="payment-errors"></span>

  <div class="form-group">
    <label>
      <span>Card Number</span>
      <input type="text" size="20" value="4000056655665556" data-stripe="number">

    </label>

  </div>

  <div class="form-group">
    <label>
      <span>Expiration(MM/YY)</span>
      <input type="text" size="2" value="11" data-stripe="exp_month">
    </label>
    <span></span>
    <input type="text" size="2" value="21" data-stripe="exp_year">
  </div>

  <div class="form-group">
    <label>
      <span>CVC</span>
      <input type="text" size="4" value="123" data-stripe="cvc">
    </label>

  </div>

  <input type="submit" class="submit" value="Submit Payment">
  <%= hidden_field_tag :plan, params[:plan] %>
  <% end %>
